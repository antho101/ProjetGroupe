<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/moncompte_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	    android:layout_marginTop="30dip"
        android:src="@drawable/register" />

    <Button
        android:id="@+id/btn_mycompte_pseudochange"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/moncompte_logo"
        android:layout_marginLeft="16dp"
        android:background="#019875"
        android:text="@string/btn_mycompte_pseud"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btn_mycompte_mdpasse"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btn_mycompte_pseudochange"
        android:layout_marginRight="25dp"
        android:background="#019875"
        android:text="@string/btn_mycompte_mdp"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btn_mycompte_des"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:background="#019875"
        android:text="@string/btn_mycompte_desinscription"
        android:textColor="#fff" />

</RelativeLayout>